@model SignUpViewModel
@{
    Layout = "~/Views/Shared/SignIn.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link href="~/css/signin.css" rel="stylesheet" />

<partial name="Notification" />
<form  method="post">
    <div class="container mt-5">
        <div class="card login-card">
            <div class="row no-gutters">
                <div class="col-md-6">
                    <img src="~/Content/images/login.jpg" alt="login" class="login-card-img" />
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <div class="brand-wrapper">
                            <img src="~/Content/images/logo.png" class="logo" />
                          
                        </div>
                        <p class="login-card-description">Login into your account</p>

                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email address" />
                        </div>
                        <div class="form-group mb-4">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <button type="submit" class="btn btn-block login-btn mb-4">Login</button>

                        <a href="#" class="forgot-password-link">Forgot password?</a>
                        <p class="login-card-footer-text">
                            Don't have an account?
                            <a asp-action="SignIn" class="text-reset">Register Here</a>
                        </p>

                        <nav class="login-card-footer-nav">
                            <a href="#">Terms of use.</a>
                            <a href="#">Privacy policy</a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js">    </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
