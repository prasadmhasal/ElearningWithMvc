@model List<SubcourseVideo>


<style>
    .container-fluid {
        margin-top: 180px;
    }

    .course-list {
        height: 100vh;
        overflow-y: auto;
    }

    .course-item {
        margin-bottom: 20px;
    }

    .course-details {
        height: 100vh;
    }
</style>
<div class="container-fluid " style="margin-top:50px;">
    <div class="row">
        <div class="col-md-3 course-list">
            <h2 class="mb-4">Course List</h2>
            <div>
                @if (Model.Any())
                {
                    foreach (var course in Model)
                    {
                        <div class="course-item">
                            <div class="card bg-light mb-3" style="max-width: 18rem;">
                                <div class="card-header">
                                    <h5>@course.Title</h5>
                                </div>
                                <div class="card-body">
                                    
                                    <input type="hidden" id="url" value="@course.Url" />
                            
                                    <input type="button" id="MyVideo" class="btn btn-primary" value="Watch Video" />
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No courses available.</p>
                }
            </div>
        </div>
        <div class="col-md-8 course-details">
            <div id="videoContainer">
                <h3>Select a course to view details</h3>
                <iframe width="560" height="315"
                        id="playvideo"
                        frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>
            </div>
            <span id="noVideosMessage" class="no-videos-message">No videos available</span>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/ajax.js"></script>

